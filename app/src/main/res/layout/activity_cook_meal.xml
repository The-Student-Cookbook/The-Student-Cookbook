<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/recipeTitle"
        android:text="recipeTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/stepTitle"
        android:text="stepTitle"
        android:layout_below="@+id/recipeTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instruction"
        android:text="instruction"
        android:layout_below="@+id/recipeTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:layout_alignEnd="@+id/nextStep" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Step"
        android:id="@+id/previousStep"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/stepTitle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Step"
        android:id="@+id/nextStep"
        android:layout_alignTop="@+id/previousStep"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/stepTitle" />
</RelativeLayout>
